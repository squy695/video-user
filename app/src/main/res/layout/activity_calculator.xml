<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10sp"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:text="简易计算器"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@color/cardview_shadow_end_color"
        />
    
    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:background="@color/white"
        android:text="0"
        android:textSize="25sp"
        android:gravity="right|bottom"
        android:lines="3"
        />
    <GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:columnCount="4"
    android:rowCount="5"
    android:orientation="horizontal"
    >
    <Button
        android:id="@+id/CE"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:gravity="center"
        android:text="CE"
        android:textSize="20sp"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/divid"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:gravity="center"
        android:text="/"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/time"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:layout_gravity="center"
        android:text="x"
        android:textSize="20sp"
        android:textStyle="bold"
        />
    <Button
        android:id="@+id/C"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:layout_gravity="center"
        android:text="C"
        android:textSize="20sp"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/seven"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:layout_gravity="center"
        android:text="7"
        android:textSize="20sp"
        android:textStyle="bold"
        />
    <Button
        android:id="@+id/eight"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:layout_gravity="center"
        android:text="8"
        android:textSize="20sp"
        android:textStyle="bold"
        />
    <Button
        android:id="@+id/nine"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:layout_gravity="center"
        android:text="9"
        android:textSize="20sp"
        android:textStyle="bold"
        />
    <Button
        android:id="@+id/plus"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:layout_gravity="center"
        android:text="+"
        android:textSize="20sp"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/four"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:layout_gravity="center"
        android:text="4"
        android:textSize="20sp"
        android:textStyle="bold"
        />
    <Button
        android:id="@+id/five"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:layout_gravity="center"
        android:text="5"
        android:textSize="20sp"
        android:textStyle="bold"
        />
    <Button
        android:id="@+id/six"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:layout_gravity="center"
        android:text="6"
        android:textSize="20sp"
        android:textStyle="bold"
        />
    <Button
        android:id="@+id/minus"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:layout_gravity="center"
        android:text="-"
        android:textSize="20sp"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/one"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:layout_gravity="center"
        android:text="1"
        android:textSize="20sp"
        android:textStyle="bold"
        />
    <Button
        android:id="@+id/two"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:layout_gravity="center"
        android:text="2"
        android:textSize="20sp"
        android:textStyle="bold"
        />
    <Button
        android:id="@+id/three"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:layout_gravity="center"
        android:text="3"
        android:textSize="20sp"
        android:textStyle="bold"
        />
    <Button
        android:id="@+id/kaifang"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:layout_gravity="center"
        android:text="√"
        android:textSize="20sp"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/dao"
        android:layout_width="100sp"
        android:layout_height="80sp"
        android:layout_gravity="center"
        android:text="1/X"
        android:textSize="20sp"
        android:textStyle="bold"
        />
    <Button
        android:id="@+id/zero"
        android:layout_width="100sp"
        android:layout_height="80sp"
        android:layout_gravity="center"
        android:text="0"
        android:textSize="20sp"
        android:textStyle="bold"
        />
    <Button
        android:id="@+id/dot"
        android:layout_width="100sp"
        android:layout_height="80sp"
        android:layout_gravity="center"
        android:text="."
        android:textSize="20sp"
        android:textStyle="bold"
        />
    <Button
        android:id="@+id/equal"
        android:layout_width="100sp"
        android:layout_height="80sp"
        android:layout_gravity="center"
        android:text="="
        android:textSize="20sp"
        android:textStyle="bold"
        />
</GridLayout>

</LinearLayout>

</LinearLayout>